<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_include_login"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/headview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/my_main_login_img"
        android:layout_margin="15dp"
         />

    <TextView
        android:id="@+id/is_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/headview"
        android:layout_alignTop="@+id/headview"
        android:layout_marginTop="8dp"
        android:text="未登录"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/headview"
        android:layout_toRightOf="@+id/headview"
        android:gravity="center|right"
        android:layout_marginBottom="8dp"
        android:lines="1"
        android:text="登陆后可享用更多云服务" />

    <View
        android:layout_below="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray" />

</RelativeLayout>